/* components/NavBar/navBar.wxss */
@import "../../style/icon.wxss";

.NavBar {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    z-index: 999999;
	background-size: 100%;
	background-position: center center;
}

.navBar_content {
    box-sizing: border-box;
}

.content_inner_wrapper {
    height: 100%;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    position: relative;
    color: #fff;
    font-size: 16px;
}

.NavBarBack {
    height: 100%;
    padding: 0 30rpx 0 20rpx;
    display: flex;
    align-items: center;
}

.icon-icon-test{
	font-size: 26px;
}

.NavBarTitle {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
	max-width: 46%;
	display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}
