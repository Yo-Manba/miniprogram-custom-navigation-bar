/* pages/drawer/drawer.wxss */

page {
    background-image: linear-gradient(282deg, #52acff 25%, #ffe32c 100%);
	width: 100vw;
    overflow: hidden;
}

::-webkit-scrollbar{
	width: 0;
	height: 0;
	color: transparent;
	display: none;
}

.innerSwiper {
    box-sizing: border-box;
    height: 100%;
}

.scrollView {
    box-sizing: border-box;
    height: 100%;
    width: 100%;
}

.windowPage {
    position: fixed;
    width: 100vw;
    height: 100vh;
    left: 0vw;
    background-color: #f1f1f1;
    transition: all 0.4s;
}

.windowPage.show {
    transform: scale(0.9, 0.9);
    left: 85vw;
    box-shadow: 0 0 60rpx rgba(0, 0, 0, 0.2);
    transform-origin: 0;
}

.drawerBtn{
	margin: 30rpx auto;
}

.mask{
	position: fixed;
	top: 0;
	right: -15vw;
	height: 100vh;
	width: 15vw;
	background-image: linear-gradient(90deg, rgba(0, 0, 0, 0.01), rgba(0, 0, 0, 0.6));
	opacity: 0;
	transition: opacity 0.4s, right 0s;
	display: flex;
	align-items: flex-end;
	justify-content: center;
	padding-bottom: 30rpx;
	box-sizing: border-box;
}

.mask.show {
	opacity: 1;
	right: 0;
}

.icon-jiantouarrow476{
	color: #fff;
	font-size: 50rpx;
	/* font-weight: bold; */
}

.drawerPage{
	position: absolute;
    width: 85vw;
    height: 100vh;
    left: 0;
    top: 0;
    transform: scale(0.9, 0.9) translateX(-100%);
    opacity: 0;
    transition: all 0.4s;
}

.drawerPage.show{
	transform: scale(1, 1) translateX(0%);
    opacity: 1;
    pointer-events: all;
}

.list{
	width: 80%;
	border-radius: 20rpx;
	background-color: #fff;
	margin: 0 auto;
}

.list view{
	height: 70rpx;
	line-height: 70rpx;
	text-align: center;
}

